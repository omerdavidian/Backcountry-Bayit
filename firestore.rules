rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - authenticated users can read their own document
    // For now, allow authenticated users to create their own user document
    // In production, this should be restricted to admin-only writes
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Events collection - anyone can read, authenticated users can create/update/delete
    // In production, you should restrict this to specific roles
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // RSVPs collection - anyone can read and create
    // Authenticated users can update/delete (should be restricted to managers in production)
    match /rsvps/{rsvpId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
  }
}
